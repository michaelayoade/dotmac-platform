[flake8]
max-line-length = 79
extend-ignore = E203, W503, E266, E501, B950, F403, F405, D100, D101, D102, D103, D104, D105, D106, D107, D200, D201, D202, D205, D400, D401
exclude = .git,__pycache__,venv,env,.venv,.env,migrations,build,dist
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
    # Ignore line length in test files
    tests/*: E501
    # Ignore line length in alembic files
    alembic/*: E501
    # Ignore line length in docstrings and comments
    *.py: E501
